<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingTop="0dp"
    android:paddingRight="30dp"
    android:paddingBottom="44dp"
    tools:context=".EventOverviewPage">

    <ImageView
        android:id="@+id/location_type_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:src="@drawable/soccer_location_icon" />

    <LinearLayout
        android:id="@+id/event_title_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_bold"
            android:text=""
            android:textColor="@color/black"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/event_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_extrabold"
            android:text=""
            android:textColor="@color/primary"
            android:textSize="26dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/event_location_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/mulish_semibold"
        android:text=""
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/event_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/mulish_regular"
        android:text=""
        android:textColor="@color/black"
        android:textSize="17dp" />



    <LinearLayout
        android:id="@+id/event_attendants_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/event_attendants_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_semibold"
            android:text="Mensen die komen: "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/event_attendant_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_semibold"
            android:text=""
            android:textColor="@color/primary"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>
